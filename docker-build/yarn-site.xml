<configuration>

  <!-- Site specific YARN configuration properties -->
  <property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce_shuffle</value>
    <description>just mapreduce_shuffle can run MapReduce</description>
  </property>
  <!-- 指定resourcemanager集群的cluster id（自定义） -->
  <property>
    <name>yarn.resourcemanager.cluster-id</name>
    <value>rmcluster</value>
  </property>
  <!--开启resourcemanagerHA,默认为false -->
  <property>
    <name>yarn.resourcemanager.ha.enabled</name>
    <value>true</value>
  </property>
  <!--开启自动恢复功能 Enable automatic failover; By default, it is enabled only when HA is enabled.-->
  <property>
    <name>yarn.resourcemanager.ha.automatic-failover.enabled</name>
    <value>true</value>
  </property>

  <!--设置yarn resourcemanager集群包含的resourcemanager列表，可为每个resourcemanager指定一个ID名称（自定义），
  分别命名为rm1,rm2-->
  <property>
    <name>yarn.resourcemanager.ha.rm-ids</name>
    <value>rm1,rm2</value>
  </property>
  <!--分别指定每个resourcemanager的主机地址，以下为示例设置，docker运行时根据参数配置进行替换-->
  <property>
    <name>yarn.resourcemanager.hostname.rm1</name>
    <value>rm1</value>
  </property>
  <property>
    <name>yarn.resourcemanager.hostname.rm2</name>
    <value>rm2</value>
  </property>
  <!--分别设置yarn资源管理器的web端地址，格式：主机地址:端口号-->
  <property>
    <name>yarn.resourcemanager.webapp.address.rm1</name>
    <value>rm1:8088</value>
  </property>
  <property>
    <name>yarn.resourcemanager.webapp.address.rm2</name>
    <value>rm2:8088</value>
  </property>
  <!--设置yarn HA依赖的zookeeper集群地址，以下为示例设置，docker运行是根据参数配置进行替换-->
  <property>
    <name>hadoop.zk.address</name>
    <value>zk1:2181,zk2:2181,zk3:2181</value>
  </property>
  <!-- Yarn Application 最大尝试启动次数 -->
  <property>
    <name>yarn.resourcemanager.am.max-attempts</name>
    <value>4</value>
    <description>
      The maximum number of application master execution attempts.
    </description>
  </property>
  <!-- 单个 Container 可申请的最小内存 -->
  <property>
    <name>yarn.scheduler.minimum-allocation-mb</name>
    <value>1024</value>
  </property>
  <!-- 单个 Container 可申请的最大内存 -->
  <property>
    <name>yarn.scheduler.maximum-allocation-mb</name>
    <value>4096</value>
  </property>
  <!-- 节点最大可用内存 -->
  <property>
    <name>yarn.nodemanager.resource.memory-mb</name>
    <value>4096</value>
  </property>
  <!-- 虚拟内存大小预定系数（虚拟内存大小限制为：实际分配的物理内存 × 预定系数（默认2.1）），这里调整为5 -->
  <property>
    <name>yarn.nodemanager.vmem-pmem-ratio</name>
    <value>5</value>
  </property>
  <!-- 虚拟内核数，推荐将该值设值为与物理机器的逻辑CPU核数数目相同 -->
  <property>
    <name>yarn.nodemanager.resource.cpu-vcores</name>
    <value>8</value>
  </property>
</configuration>
